package lumicode.agendaja.api.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import lumicode.agendaja.api.model.Funcionario;
import lumicode.agendaja.api.model.Salario;

public interface FuncionarioRepository 
	extends JpaRepository<Funcionario, Long>{
	
	@Query("SELECT s.salario FROM Funcionario AS f "
			+ "INNER JOIN f.salario AS s WHERE f.idFuncionario = ?1")
	public Salario pegarSalarioDeFuncionario(Long idFuncionario);
}
