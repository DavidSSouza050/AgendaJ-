<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp"
    android:padding="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/caixa_de_texto_redonda_transparente">

        <RelativeLayout
            android:layout_width="225dp"
            android:layout_height="208dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@android:color/white">

            <Button
                android:id="@+id/btn_cancelar_reservas2"
                style="@style/Animation.AppCompat.Dialog"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:background="@drawable/botao_redondo_colorido"
                android:text="CANCELAR"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="88dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/caixa_de_texto_redonda_transparente"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_em_aberto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Em Aberto"
                    android:textAlignment="center" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_servico_reservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="46dp"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text_nome_estabelecimento_reservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_servico_reservas"
                android:layout_marginTop="4dp"
                android:maxLength="18"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/text_endereco_reservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_nome_estabelecimento_reservas"
                android:layout_marginTop="4dp"
                android:maxLength="30"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_cancelar_reservas"
                style="@style/Animation.AppCompat.Dialog"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:background="@drawable/botao_redondo_colorido"
                android:text="CANCELAR"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_finalizar_reservas"
                style="@style/Animation.AppCompat.Dialog"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/btn_cancelar_reservas"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="-119dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/botao_redondo_colorido"
                android:text="FINALIZAR"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="131dp"
            android:layout_height="208dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/text_mes_reservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_dia_reservas"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text_dia_reservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_ano_reservas"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text_ano_reservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_hora_reservas"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text_hora_reservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="38dp"
                android:textAlignment="center"
                android:textSize="24dp" />
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>