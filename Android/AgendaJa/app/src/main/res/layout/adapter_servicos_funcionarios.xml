<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp"
    android:padding="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/caixa_de_texto_redonda_transparente">

        <RelativeLayout
            android:layout_width="225dp"
            android:layout_height="208dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/txet_servico_reservas_funcionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="46dp"
                android:text="ServiÃ§o X"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txet_nome_estabelecimento_funcionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txet_servico_reservas_funcionario"
                android:layout_marginTop="4dp"
                android:maxLength="18"
                android:text="Nome do estabelecimento"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/text_endereco_reservas_funcionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txet_nome_estabelecimento_funcionario"
                android:layout_marginTop="4dp"
                android:maxLength="30"
                android:text="Rua Elton Silva, 905 - Centro, Jandira - SP, 06600-025"
                android:textSize="16dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="131dp"
            android:layout_height="208dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/text_mes_reservas_funcionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_dia_reservas_funcionario"
                android:layout_alignParentStart="true"
                android:text="Dezembro"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text_dia_reservas_funcionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_ano_reservas_funcionario"
                android:layout_alignParentStart="true"
                android:text="25"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text_ano_reservas_funcionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_hora_reservas_funcionario"
                android:layout_alignParentStart="true"
                android:text="2019"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text_hora_reservas_funcionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="38dp"
                android:text="14:00"
                android:textAlignment="center"
                android:textSize="24dp" />
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>