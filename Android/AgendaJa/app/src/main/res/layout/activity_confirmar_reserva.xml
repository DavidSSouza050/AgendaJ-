<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmarReservaActivity"
    android:background="@color/colorBrancoAcinzentadoo"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_adapter_estabelecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:padding="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >

            <RelativeLayout
                android:id="@+id/relative_hora_minha_agenda"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/text_tempo_do_confirmar_servico"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="7dp"
                    android:text="10:00 - 11:00"
                    android:textColor="@color/colorRoxoMeioAzul"
                    android:textAlignment="center"
                    android:textSize="28dp" />

                <LinearLayout
                    android:id="@+id/linearLayout_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorCinza"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"></LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caixa_servico_minha_agenda"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/relative_hora_minha_agenda"
                tools:layout_editor_absoluteX="26dp">

                <LinearLayout
                    android:id="@+id/img_foto_usuario_perfil_minha_agenda"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_dia_do_confirmar_servico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="06"
                            android:textColor="@color/colorRoxoMeioAzul"
                            android:textAlignment="center"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_mes_do_confirmar_servico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DEZ"
                            android:textColor="@color/colorRoxoMeioAzul"
                            android:textAlignment="center"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_ano_do_confirmar_servico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2019"
                            android:textColor="@color/colorRoxoMeioAzul"
                            android:textAlignment="center"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_funcionario_do_confirmar_servico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_foto_usuario_perfil_minha_agenda"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/img_foto_usuario_perfil_minha_agenda"
                    android:text="Nome funcionario"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorRoxoMeioAzul"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txet_nome_estabelecimento_do_confirmar_servico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_funcionario_do_confirmar_servico"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/img_foto_usuario_perfil_minha_agenda"
                    android:text="Nome do estabelecimento"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/text_servico_do_confirmar_servico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/img_foto_usuario_perfil_minha_agenda"
                    android:layout_below="@+id/img_foto_usuario_perfil_minha_agenda"
                    android:layout_marginTop="20dp"
                    android:text="Serviço"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_qual_servico_minha_agenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/img_foto_usuario_perfil_minha_agenda"
                    android:layout_below="@+id/text_servico_do_confirmar_servico"
                    android:text="Corte Social"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorRoxoMeioAzul"/>

                <TextView
                    android:id="@+id/txt_valor_minha_agenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/text_preco_do_confirmar_servico"
                    android:layout_alignTop="@+id/text_servico_do_confirmar_servico"
                    android:text="Valor"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_preco_do_confirmar_servico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text_servico_do_confirmar_servico"
                    android:layout_marginEnd="12dp"
                    android:text="R$ 25,00"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorRoxoMeioAzul"/>

                <TextView
                    android:id="@+id/txt_endereco_minha_agenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/text_endereco_do_confirmar_servico"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="8dp"
                    android:text="Endereço"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_endereco_do_confirmar_servico"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:text="Rua Elton Silva, 905 - Centro, Jandira - SP, 06600-025"
                    android:textSize="14dp"
                    android:textColor="@color/colorRoxoMeioAzul"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirmar_reserva"
        style="@style/Animation.AppCompat.Dialog"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botao_redondo_colorido"
        android:text="CONFIRMAR"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>