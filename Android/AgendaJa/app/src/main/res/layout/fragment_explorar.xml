<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/relative_explorar"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp"
        android:background="@drawable/gradiente">

        <EditText
            android:id="@+id/txt_procura_explorar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/caixa_de_texto_redonda"
            android:drawableStart="@drawable/ic_action_explorar"
            android:hint="O que voÃª esta procurando?"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txt_local_explorar"
            android:layout_width="177dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/caixa_de_texto_redonda"
            android:hint="Onde?"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_procura_explorar" />

        <EditText
            android:id="@+id/txt_quando_explorar"
            android:layout_width="137dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/caixa_de_texto_redonda"
            android:hint="Quando?"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_procura_explorar" />
        " />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_explorar">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>