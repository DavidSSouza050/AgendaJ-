<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:id="@+id/card_adapter_estabelecimento"
    android:layout_margin="18dp"
    android:padding="8dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/relative_hora_minha_agenda"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/text_hora_reservas_funcionario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="7dp"
            android:text="10:00 - 11:00"
            android:textColor="@color/colorRoxoMeioAzul"
            android:textAlignment="center"
            android:textSize="28dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorCinza"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/caixa_servico_minha_agenda"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        app:layout_constraintTop_toBottomOf="@+id/relative_hora_minha_agenda"
        tools:layout_editor_absoluteX="26dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/img_foto_usuario_perfil_minha_agenda"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_dia_reservas_funcionario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="06"
                    android:textColor="@color/colorRoxoMeioAzul"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_mes_reservas_funcionario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEZ"
                    android:textColor="@color/colorRoxoMeioAzul"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_ano_reservas_funcionario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019"
                    android:textColor="@color/colorRoxoMeioAzul"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_nome_minha_agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_foto_usuario_perfil_minha_agenda"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_foto_usuario_perfil_minha_agenda"
            android:text="Nome Completo"
            android:textSize="24dp"
            android:textColor="@color/colorRoxoMeioAzul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/rtb_adapter"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_foto_usuario_perfil_minha_agenda"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_foto_usuario_perfil_minha_agenda"
            android:max="10"
            android:numStars="5" />

        <TextView
            android:id="@+id/txt_servico_minha_agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_foto_usuario_perfil_minha_agenda"
            android:layout_below="@+id/img_foto_usuario_perfil_minha_agenda"
            android:text="ServiÃ§o"
            android:layout_marginTop="20dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/txt_qual_servico_minha_agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_foto_usuario_perfil_minha_agenda"
            android:layout_below="@+id/txt_servico_minha_agenda"
            android:text="Corte Social"
            android:textColor="@color/colorRoxoMeioAzul"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_valor_minha_agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_real_minha_agenda"
            android:layout_alignTop="@+id/txt_servico_minha_agenda"
            android:text="Valor"

            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_real_minha_agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txt_servico_minha_agenda"
            android:layout_marginEnd="12dp"
            android:text="R$ 25,00"
            android:textColor="@color/colorRoxoMeioAzul"
            android:textSize="18dp" />


    </RelativeLayout>



</android.support.v7.widget.CardView>