<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/txt_comentario_id"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="COMENTARIO"
        android:gravity="center"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/txt_nota_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="NOTA"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/txt_comentario_id"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/txt_comentario_recycler"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txt_comentario_id"
        android:gravity="center"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/txt_nota_recycler"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/txt_nota_id"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/txt_comentario_id"
        android:layout_marginLeft="8dp"
        />

</RelativeLayout>